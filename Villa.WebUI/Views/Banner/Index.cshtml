@model List<ResultBannerDto>
@{
    ViewData["Title"] = "Banner Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<table class="table table-hover table-bordered">
    <tr>
        <th>#</th>
        <th>Şehir</th>
        <th>Başlık</th>
        <th>İşlemler</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.City</td>
            <td>@item.Title</td>
            <td>
                <a asp-asp-controller="Banner" asp-action="DeleteBanner" asp-route-id="@item.Id" class="btn btn-danger">Sil</a>

                <a asp-asp-controller="Banner" asp-action="UpdateBanner" asp-route-id="@item.Id" class="btn btn-success">Güncelle</a>
            </td>
        </tr>
    }
</table>
<a asp-asp-controller="Banner" asp-action="CreateBanner"  class="btn btn-info">Ekle</a>